################################################################################
# .env.sample â€” OES GenAI Micro-Apps (Unified Configuration)
# ------------------------------------------------------------------------------
# Copy this file to `.env` and fill in all secrets locally.
#
# This config is valid across all internal Streamlit micro-apps:
#   - Alt-Text Generator
#   - Umich Feedback Bot
#   - Visual Transcription Tool
#   - CPS Import Tool
#   - Testing / Sandbox
#
# Maintainer: Imaad Fakier â€” Senior GenAI Developer, OES Solutions
################################################################################


###############################################################################
# ðŸ”’ ACCESS & AUTHENTICATION
###############################################################################
# Global hashed passcode for internal-access gating.
# Generate hash with:
#   python3 -c "import hashlib; print(hashlib.sha256('YOURCODE'.encode()).hexdigest())"
ACCESS_CODE_HASH=

# Optional app-specific overrides (if you isolate passwords)
ALT_TEXT_ACCESS_HASH=
FEEDBACK_BOT_ACCESS_HASH=
VISUAL_TRANSCRIPTION_ACCESS_HASH=
CPS_IMPORT_ACCESS_HASH=


###############################################################################
# ðŸ¤– MODEL PROVIDERS
###############################################################################
# <- Primary LLM provider across all apps
# Enter only the keys you use.

# --- OpenAI (GPT-4o / GPT-4-Turbo / Text-Embeddings) ---
OPENAI_API_KEY=

# --- Anthropic (Claude 3.x) ---
CLAUDE_API_KEY=

# --- Google Generative AI (Gemini) ---
GOOGLE_API_KEY=

# --- Perplexity (RAG + Web Reasoning) ---
PERPLEXITY_API_KEY=

# --- Optional Azure OpenAI ---
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=


###############################################################################
# ðŸ§  MODEL CONFIGURATION DEFAULTS
###############################################################################
# Used across apps (Alt-Text, Feedback, Visual Transcription, CPS Import).
PREFERRED_LLM=gpt-4o
LLM_TEMPERATURE=0.4
MAX_TOKENS=2000

# Whether UI displays token cost / model stats.
DISPLAY_COST=true


###############################################################################
# ðŸ’¾ STORAGE & LOGGING
###############################################################################
# Choose one logging backend.

# (1) Google Sheets â€” lightweight, recommended for low-traffic tools.
GSHEETS_URL=
GSHEETS_WORKSHEET_OVERRIDE=Sheet1

# (2) SQL database â€” enterprise telemetry / audit logs / upload indexing.
# Example: postgresql+psycopg2://USER:PASS@HOST:5432/DB
SQLALCHEMY_URL=

# Debug verbosity for storage adapters.
DEBUG_STORAGE=false


###############################################################################
# ðŸ” RAG & VECTOR DATABASE (optional)
###############################################################################
# Used by CPS Import Tool, Feedback Bot and future OES knowledge agents.

# MongoDB â€” embeddings + metadata
MONGO_DB_URI=
DATABASE_NAME=vector_database
META_COLLECTION=files_metadata
EMBEDDINGS_COLLECTION=vector_embeddings


###############################################################################
# ðŸ“ MEDIA / FILE HANDLING
###############################################################################
# Temporary uploads directory (local or container volume)
MEDIA_TEMP_PATH=tmp_uploads/


###############################################################################
# ðŸ§© FEATURE FLAGS (global toggles)
###############################################################################
ENABLE_IMAGE_UPLOADS=true
ENABLE_TEXT_INPUTS=true
ENABLE_COST_DISPLAY=true
ENABLE_COMPLETION_MESSAGE=true


###############################################################################
# ðŸ§± APP & ENVIRONMENT METADATA
###############################################################################
# Used for build behavior, logging scopes, and dashboards.
ENVIRONMENT=development        # development | staging | production
ORG_NAME="OES Solutions"
APP_SUITE_NAME="OES GenAI Micro-Apps"
APP_NAME="Alt Text Generator"
APP_VERSION=1.0.0

# Whether to enable developer-safe console output
DEBUG_MODE=false


###############################################################################
# ðŸš€ DEPLOYMENT SETTINGS
###############################################################################
DEPLOYMENT_TARGET=streamlit    # streamlit | internal | docker
STREAMLIT_APP_URL=
GIT_REPO_URL=

# Future automation hooks (CI/CD)
AUTO_DEPLOY_ON_PUSH=false
AUTO_SYNC_GENAI_STUDIO=false
